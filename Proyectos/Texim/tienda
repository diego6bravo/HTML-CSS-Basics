}

.overlay3 {
    background: #000000;
    bottom: 0;
    left: 0;
    position: fixed;
    right: 0;
    top: 0;
    z-index: 100;
	opacity:0.5;
}

a.close3 {
    background: url("../diegogb/img/cancel.png") repeat scroll left top transparent;
