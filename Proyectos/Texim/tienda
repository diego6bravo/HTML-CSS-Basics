    <title>TiendaPopUP</title>

    <script type="text/javascript">
        function openDialog() {
            $('#overlay3').fadeIn('fast', function() {
                $('#popup3').css('display','block');
                $('#popup3').animate({'left':'19%'},500);
            });
        }
        
        function closeDialog(id) {
            $('#'+id).css('position','absolute');
            $('#'+id).animate({'left':'-100%'}, 500, function() {
                $('#'+id).css('position','fixed');
                $('#'+id).css('left','100%');
                $('#overlay3').fadeOut('fast');
            });
        }
        </script>



</head>
<body onload="openDialog();">
   
            <div id="content">
            <div id="overlay3" class="overlay3" style="display: block;"></div>
            <div id="popup3" class="popup3" style="display: block;  top:10%; position: fixed;">
                <a onclick="closeDialog(&#39;popup3&#39;);" class="close3"></a>
                <div>
                            <iframe src="popuptienda.html" scrolling="no" frameborder="0" style="border:none; overflow:hidden;height:620px;width:100%;" allowtransparency="true"></iframe>
                        </div>
                </div>
                </div>

                <iframe src="https://tienda.texim-ltd.com" style="overflow:hidden;overflow-x:hidden;overflow-y:hidden;height:100%;width:100%;position:absolute;top:0px;left:0px;right:0px;bottom:0px" frameborder="0"></iframe>

